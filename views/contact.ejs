<!-- header  -->
<%- include('./layout/header.ejs') %>


<!-- contact us  -->
<div class="container mb-5">
    <div class="row">
        <h1 class="my-5 text-decoration-underline text-center">Contact Us</h1>
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <form action="/contactinsert" method="post">
                <div class="mb-4">
                    <input type="text" name="name" placeholder="Name" class="form-control">
                </div>
                <div class="mb-4">
                    <input type="email" name="email" placeholder="Email" class="form-control">
                </div>
                <div class="mb-4">
                    <input type="number" name="phone" placeholder="Phone" class="form-control">
                </div>
                <div class="mb-4">
                    <textarea name="message" placeholder="Message" class="form-control" id="" cols="30" rows="7"></textarea>
                </div>
                <button type="submit" class="btn btn-warning">Send Message</button>
            </form>
        </div>
    </div>
</div>


<!-- footer  -->
<%- include('./layout/footer.ejs') %>