<!-- header  -->
<%- include('./layout/header.ejs') %>

<!-- banner -->
<div>
    <img src="images/earth.jpg" class="img-fluid" alt="">
</div>

<!-- card  -->
<div class="container text-center text-decoration-underline my-5">
  <h1>BLOGS</h1>
</div>

<div class="container mb-5">
  <div class="row gx-lg-5 gy-5">
    <% b.forEach((item)=>{ %>
      <div class="col-lg-4">
        <div class="card">
          <img src="<%= item.image.url %>" height="250px" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description.slice(0,120) %></p>
            <p ><%= item.createdAt.toLocaleDateString() %></p>
            <a href="/blog-detail/<%= item._id %>" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>

    <div class="d-flex justify-content-center home-viewall-btn">
      <button type="button" onclick="location.href='/blog'" class="btn btn-dark rounded-0">VIEW MORE</button>
    </div>

  </div>
</div>

    <!-- footer  -->
    <%- include('./layout/footer.ejs') %>